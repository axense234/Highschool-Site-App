{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "./backend",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "plugins": [
      { "transform": "transformer-module" },
  ]
  },
  "include": ["backend/**/*"],
  "exclude": ["node_modules"]
}
