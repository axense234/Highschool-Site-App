{
  "compilerOptions": {
    "sourceMap": false,
    "outDir": "build",
    "strict": false,
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "target": "ES2015",
    "plugins": [{"transform":"transformer-module"}]
  },
  "include": ["src/**/*"],
  "exclude": ["node_internals"]
}